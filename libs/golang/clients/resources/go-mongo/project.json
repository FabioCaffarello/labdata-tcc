{
  "name": "libs-golang-clients-resources-go-mongo",
  "$schema": "../../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/golang/clients/resources/go-mongo",
  "tags": [
    "lang:golang",
    "scope:resource-cli"
  ],
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker-compose up -d",
        "cwd": "{projectRoot}"
      }
    },
    "check": {
      "executor": "@nx-go/nx-go:test",
      "dependsOn": [
        "start"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "start"
      ],
      "options": {
        "commands": [
          {
            "command": "go test ./..."
          },
          {
            "command": "docker-compose down -v"
          }
        ],
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    },
    "godoc": {
      "executor": "nx:run-commands",
      "options": {
      "command": "gomarkdoc --output docs/godoc.md  ./...",
      "cwd": "{projectRoot}"
      }
    }
  }
}
